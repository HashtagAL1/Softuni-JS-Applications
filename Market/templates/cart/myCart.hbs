{{> header}}
<main>
    <section id="viewCart">
        <h1>My Cart</h1>
        <div class="products" id="cartProducts">
            {{#if isEmpty}}
                <div>Currently, your cart is empty.</div>
            {{else}}
                <table>
                    <thead>
                    <tr>
                        <th>Product</th>
                        <th>Description</th>
                        <th>Quantity</th>
                        <th>Total Price</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#each myProducts}}
                        {{> myProduct}}

                    {{/each}}
                    </tbody>
                </table>
            {{/if}}

        </div>
    </section>
</main>
{{> footer}}